{
  "compilerOptions": {
    "target": "es2022",
    "strict": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["."],
  "exclude": ["node_modules", "__test__", "benchmark"]
}
